<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1d592"
    android:orientation="vertical"
    tools:context=".drawView">


    <com.example.colorfall.drawView
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:background="#FFFFFFFF" />

    <TextView
        android:id="@+id/current_size"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:baselineAligned="false"
        android:fontFamily="casual"
        android:text=" Brush Size: 70"
        android:textColor="#630000"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="#DFC290"
        android:max="120"
        android:min="1"
        android:progress="70"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="396dp">/</SeekBar>

    <TextView
        android:id="@+id/recent_colors"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:baselineAligned="false"
        android:fontFamily="casual"
        android:text=" Recent Colors:"
        android:textColor="#630000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/paint_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/blueColor"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#072F5F"
            android:tag="#072F5F" />

        <ImageButton
            android:id="@+id/redColor"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFF0000"
            android:contentDescription="@string/pixel"
            android:tag="#FFFF0000" />

        <ImageButton
            android:id="@+id/yellowColor"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFF00"
            android:contentDescription="@string/pixel"
            android:tag="#FFFF00" />

        <ImageButton
            android:id="@+id/blackColor"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FF000000"
            android:contentDescription="@string/pixel"
            android:tag="#FFFF0000" />

        <ImageButton
            android:id="@+id/greenColor"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#00FF3E"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

        <ImageButton
            android:id="@+id/new_colors"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:background="#00FFFFFF"
            android:src="@drawable/add_colors" />

        <ImageButton
            android:id="@+id/recentOne"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

        <ImageButton
            android:id="@+id/recentTwo"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

        <ImageButton
            android:id="@+id/recentThree"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

        <ImageButton
            android:id="@+id/recentFour"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

        <ImageButton
            android:id="@+id/recentFive"
            android:layout_width="@dimen/pixel_brush"
            android:layout_height="@dimen/pixel_brush"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:contentDescription="@string/pixel"
            android:tag="#00FF3E" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/erase"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/colorPicker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/colorPicker"
            android:src="@drawable/color_pick" />

        <ImageButton
            android:id="@+id/pixel_pen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/pixel_pen"
            android:src="@drawable/pixel_pen" />

        <ImageButton
            android:id="@+id/save_file"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:src="@drawable/save_file" />


        <ImageButton
            android:id="@+id/delete_canvas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:src="@drawable/delete_canvas" />


        <Button
            android:id="@+id/load_file"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Load" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

